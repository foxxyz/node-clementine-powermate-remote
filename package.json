{
  "name": "clementine-powermate-remote",
  "version": "1.1.1",
  "description": "Remote for Clementine using a Griffin Powermate",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "author": "Ivo Janssen",
  "bin": "./index.js",
  "keywords": [
    "clementine",
    "powermate",
    "remote",
    "remote control",
    "player control"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxxyz/clementine-powermate-remote.git"
  },
  "homepage": "https://github.com/foxxyz/clementine-powermate-remote",
  "dependencies": {
    "argparse": "^2.0.1",
    "clementine-client": "^1.0.0",
    "fresh-console": "^1.0.2",
    "node-hid": "^1.3.0"
  },
  "devDependencies": {
    "eslint": "^7.8.1"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "rules": {
      "eqeqeq": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "info",
            "error"
          ]
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-const": [
        "error"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  }
}
